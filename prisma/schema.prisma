generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  USER
}

enum TransactionType {
  TRANSFER      // User sends money to another user
  DEPOSIT       // Money added to account
  WITHDRAWAL    // Money removed from account
}

enum TransactionStatus {
  PENDING
  COMPLETED
  FAILED
}

// Main user table - stores account info
model User {
  id              String    @id @default(cuid())
  name            String
  email           String    @unique
  password        String
  confirm         String?
  phone           String?
  country         String?
  pin             String?   // Hashed PIN for transfers
  profilePicture  String?   // URL to profile picture
  
  // Banking fields
  accountName     String
  accountNumber   String    @unique  // 8-digit unique number
  balance         Decimal   @default(0) @db.Decimal(15, 2)  // Money in account
  
  role            UserRole  @default(USER)
  emailVerified   Boolean   @default(false)
  isBlocked       Boolean   @default(false)
  isRestricted    Boolean   @default(false)
  imfCode         String?
  imfCodeExpiry   DateTime?
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  // Relations
  sessions              Session[]
  verificationTokens    VerificationToken[]
  sentTransactions      Transaction[] @relation("SentTransactions")
  receivedTransactions  Transaction[] @relation("ReceivedTransactions")
  deposits              Deposit[]
  
  @@index([accountNumber])
  @@index([email])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  id         String   @id @default(cuid())
  token      String   @unique
  userId     String
  expires    DateTime
  createdAt  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Records every money movement
model Transaction {
  id              String            @id @default(cuid())
  reference       String            @unique  // e.g., "TXN-12345"
  amount          Decimal           @db.Decimal(15, 2)
  type            TransactionType
  status          TransactionStatus @default(COMPLETED)
  description     String?
  
  // Who sent money
  senderId        String?
  senderName      String?
  senderAccount   String?
  
  // Who received money
  receiverId      String?
  receiverName    String?
  receiverAccount String?
  
  // Balance tracking
  balanceBefore   Decimal           @db.Decimal(15, 2)  // Balance before transaction
  balanceAfter    Decimal           @db.Decimal(15, 2)  // Balance after transaction
  
  // Admin audit
  adminId         String?           // If admin made this transaction
  adminEmail      String?
  
  createdAt       DateTime          @default(now())
  
  sender          User?             @relation("SentTransactions", fields: [senderId], references: [id], onDelete: Cascade)
  receiver        User?             @relation("ReceivedTransactions", fields: [receiverId], references: [id], onDelete: Cascade)
  
  @@index([senderId])
  @@index([receiverId])
  @@index([reference])
  @@index([createdAt])
}

// Separate deposit tracking (optional - for admin view)
model Deposit {
  id            String   @id @default(cuid())
  userId        String
  amount        Decimal  @db.Decimal(15, 2)
  status        String   @default("completed")
  description   String?
  adminEmail    String?  // Which admin approved it
  createdAt     DateTime @default(now())
  
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([createdAt])
}